---
import projects from "../data/projects_timeline.js";
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout>
  <section class="floating-section" aria-labelledby="projects-index-title">
    <h2 id="projects-index-title" class="floating-title">Projects</h2>
    <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((p) => (
        <li class="rounded-2xl border border-white/10 bg-white/5 p-5 backdrop-blur-sm text-[color:var(--textMain)]">
          <h3 class="text-lg font-semibold text-[color:var(--sectionHeader)]">{p.title}</h3>
          {p.subtitle && (<p class="text-sm text-[color:var(--textAlt)]">{p.subtitle}</p>)}
          <div class="mt-2 text-xs text-[color:var(--textAlt)]">{p.year}</div>
          {Array.isArray(p.tags) && (
            <div class="mt-3 flex flex-wrap gap-2">
              {p.tags.map((t) => (<span class="px-2 py-0.5 rounded-full border border-white/15 text-xs">{t}</span>))}
            </div>
          )}
          <a class="mt-4 inline-flex items-center gap-2 underline text-[color:var(--accent)]" href={`/projects/${p.slug}`}>
            View Journey
          </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>

